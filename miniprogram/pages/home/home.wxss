/* pages/home/home.wxss */

.slide swiper {
  height: 480rpx;
}

.slide swiper image {
  height: 100%;
  width: 100%;
}

.board {
  box-sizing: border-box;
  background-color: #f8f9fb;
}

.board-item {
  display: flex;
  flex-direction: column;
  cursor: pointer;
  font-size: 20rpx;
  margin: 40rpx 0;
  padding: 20rpx;
  background-color: #fff;
}

.board-item .title {
  display: flex;
  margin-bottom: 10rpx;
  width: 100%;
}

.board-item .title text {
  flex: 1;
}

.board-item .title image {
  height: 20rpx;
  width: 20rpx;
}

.board-item .content {
  height: 300rpx;
}

.board-item .content .inner {
  display: flex;
  flex-direction: row;
  height: 300rpx;
  width: 900rpx;
}

.board-item .content .inner .movie-item {
  display: flex;
  flex-direction: column;
  width: 180rpx;
  margin: 10rpx;
}

.board-item .content .inner .movie-item image {
  width: 180rpx;
  height: 250rpx;
}

.board-item .content .inner .movie-item text {
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 一部电影 */
.movie{
  display:flex;/*弹性布局*/
  padding:10rpx; /*内边距*/
  border-bottom:1px solid #ccc; /*底部边框*/
  margin-top:10px; /*外边距*/
}
/* 左侧图片 */
.movie-img{  /*图片宽度高度*/

  width:200rpx;
  height:300rpx;
  margin-right:20rpx;/*右侧文字间距*/
  margin-top: 20px
}
/* 右侧电影介绍 */
.movie-info{
  flex:1;/*将右侧区域充满*/
  font-size:28rpx;/*右侧文字*/
  line-height:1.8;/*原有间距1.8倍*/
}
/* 标题 */
.movie-title{
  color:#666;/*文字颜色*/
  font-size:40rpx;/*字体大小*/
}
/* 分数 */
.movie-score{
  color:#faaf00;/*橙色高亮*/
}
/* 按钮 */
.movie-comment{
  height:60rpx;  /*按钮高度*/
  background:#e54847; /*背景*/
  color:#fff;   /*文字颜色*/
  font-size:26rpx; /*文字大小*/
  margin-top:120rpx;/*与上面文字间距*/
}
